<!--components/classic/music/index.wxml-->

<view hidden="{{ hidden }}" class="container">
  <image class="classic-img {{ isPlay ? 'rotation' : '' }}" src="{{ imgSrc }}" />
  <image class="player-img" bind:tap="onPlay" src="{{ isPlay ? pauseSrc: playSrc }}" />
  <image class="tag" src="images/music@tag.png" />
  <text class="content">{{ content }}</text>
</view>
